{
  "name": "Outlook Ad Remover",
  "description": "Outlook Ad Remover",
  "version": "1.0",
  "permissions": [
    "tabs", 
    "https://outlook.live.com/mail/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://outlook.live.com/mail/*"],
      "css": [
        "outlook.css"
      ],
      "js": [
        "jquery-3.2.1.min.js", 
        "outlook_ad_remove.js"
      ]
    }
  ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Outlook Ad Remover"
  },
  "manifest_version": 2
}
